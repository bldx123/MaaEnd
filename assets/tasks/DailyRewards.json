{
    "task": [
        {
            "name": "DailyRewards",
            "label": "$task.DailyRewards.label",
            "entry": "DailyRewardStart",
            "description": "$task.DailyRewards.description",
            "option": [
                "DailyEmailRewards",
                "DailyTaskRewards",
                "DailyEventRewards",
                "DailyProtocolPassRewards"
            ],
            "controller": [
                "Win32",
                "Win32-Window",
                "Win32-Background",
                "Win32-Window-Background",
                "Win32-Front"
            ]
        }
    ],
    "option": {
        "DailyEmailRewards": {
            "type": "switch",
            "label": "$option.DailyEmailRewards.label",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "DailyEmailRewardSub": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "DailyEmailRewardSub": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "DailyEventRewards": {
            "type": "switch",
            "label": "$option.DailyEventRewards.label",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "DailyEventRewardSub": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "DailyEventRewardSub": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "DailyTaskRewards": {
            "type": "switch",
            "label": "$option.DailyTaskRewards.label",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "DailyTaskRewardSub": {
                            "enabled": true
                        }
                    },
                    "option": [
                        "DailyTaskUpgradeWeapon",
                        "DailyTaskCreation",
                        "DailyTaskAssemble"
                    ]
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "DailyTaskRewardSub": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "DailyProtocolPassRewards": {
            "type": "switch",
            "label": "$option.DailyProtocolPassRewards.label",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "DailyProtocolPassRewardSub": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "DailyProtocolPassRewardSub": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "DailyTaskUpgradeWeapon": {
            "type": "switch",
            "default_case": "No",
            "label": "$option.DailyTaskUpgradeWeapon.label",
            "description": "$option.DailyTaskUpgradeWeapon.desc",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "DailyTaskUpgradeWeapon": {
                            "enabled": true
                        },
                        "DailyTaskCheckActivityStatus": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "DailyTaskUpgradeWeapon": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "DailyTaskAssemble": {
            "type": "switch",
            "default_case": "No",
            "label": "$option.DailyTaskAssemble.label",
            "description": "$option.DailyTaskAssemble.desc",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "DailyTaskAssemble": {
                            "enabled": true
                        },
                        "DailyTaskCheckActivityStatus": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "DailyTaskAssemble": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "DailyTaskCreation": {
            "type": "switch",
            "default_case": "No",
            "label": "$option.DailyTaskCreation.label",
            "description": "$option.DailyTaskCreation.desc",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "DailyTaskCreation": {
                            "enabled": true
                        },
                        "DailyTaskCheckActivityStatus": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {
                        "DailyTaskCreation": {
                            "enabled": false
                        }
                    }
                }
            ]
        }
    }
}
